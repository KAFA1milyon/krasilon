    <div class="centerColumn" id="allProductsDefault">

        <h1 id="allProductsDefaultHeading">All Products</h1>


        <div id="sorter" class="tie2">
            <div class="tie2-indent">
                <form name="sorter_form" action="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all" method="get">
                    <input type="hidden" name="main_page" value="products_all">	<label for="disp-order-sorter">Sort by: </label>
                    <select name="disp_order" onchange="this.form.submit();" id="disp-order-sorter">
                        <option value="1" selected="selected">Product Name</option>
                        <option value="2">Product Name - desc</option>
                        <option value="3">Price - low to high</option>
                        <option value="4">Price - high to low</option>
                        <option value="5">Model</option>
                        <option value="6">Date Added - New to Old</option>
                        <option value="7">Date Added - Old to New</option>
                    </select>
                </form>
            </div>
        </div>
        <br class="clearBoth">


        <br class="clearBoth">

        <div id="allProductsListingTopNumber" class="navSplitPagesResult back"><span>Displaying</span> 1 to 4 (of <span>76</span> products)</div>
        <div id="allProductsListingTopLinks" class="navSplitPagesLinks forward"> &nbsp;<strong class="current">1</strong>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=2" title=" Page 2 ">2</a>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=3" title=" Page 3 ">3</a>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=4" title=" Page 4 ">4</a>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=5" title=" Page 5 ">5</a>&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=6" title=" Next Set of 5 Pages ">...</a>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=2" title=" Next Page ">Next&nbsp;&gt;&gt;</a>&nbsp;</div>
        <br class="clearBoth">

        <div class="wrapper">
            @foreach (balaban.Models.Urun i in Model)
            {
                <div class="tie tie-margin1">
                    <div class="tie-indent">
                        <div class="wrapper">
                            <div class="fleft" style="width:33%">
                                <span class="image">
                                    <a class="name" href="@Href("~/Home/Details/" + (i.ID))"><img src="~/Content/Img/@i.UrunResimler.First(x=>x.AnaResim==true).ResimYol" alt="@i.UrunAdi" title="@i.UrunAdi" width="198" height="168"></a>
                                </span><br clear="all"><br clear="all"><span class="stock">In Stock: @i.ID</span>
                            </div>
                            <div class="fleft" style="width:66%">
                                Date Added: @i.KayitTarihi.Value.ToLongDateString()<br clear="all"><br clear="all"><hr><br><a class="name" href="@Href("~/Home/Details/" + (i.ID))">
                                    <strong>@i.UrunAdi</strong>
                                </a><br clear="all"><br clear="all"><strong>Model: <br clear="all"></strong>Weight: 0lbs<br clear="all"><br clear="all">
                                <span class="price-text">Price: &nbsp;</span><span class="price">₺@i.UrunFiyatlar.First().Fiyat</span><br clear="all"><br clear="all"><div class="btn1">
                                    <a href="@Href("~/Home/Details/" + (i.ID))">
                                        <img src="~/Content/Img/buttons/english/button_buy_now.gif" alt="Buy Now" title=" Buy Now " width="78" height="22">
                                    </a>
                                </div>&nbsp;<br><br clear="all">
                            </div>
                        </div>

                        <div class="wrapper">
                            <br><div class="description"><strong>Details:</strong>@i.UrunDetay.DetayText.Substring(0, 100)<a href="@Href("~/Home/Details/" + (i.ID))"> .> ... more info</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div id="allProductsListingBottomNumber" class="navSplitPagesResult back"><span>Displaying</span> 1 to 4 (of <span>76</span> products)</div>
        <div id="allProductsListingBottomLinks" class="navSplitPagesLinks forward"> &nbsp;<strong class="current">1</strong>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=2" title=" Page 2 ">2</a>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=3" title=" Page 3 ">3</a>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=4" title=" Page 4 ">4</a>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=5" title=" Page 5 ">5</a>&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=6" title=" Next Set of 5 Pages ">...</a>&nbsp;&nbsp;<a href="http://livedemo00.template-help.com/zencart_34200/index.php?main_page=products_all&amp;disp_order=1&amp;page=2" title=" Next Page ">Next&nbsp;&gt;&gt;</a>&nbsp;</div>
