                                    <div class="text">
                                        @urun.UrunDetay.DetayText.Substring(0, 20)...
                                    </div>
                                    <div class="wrapper">
                                        <div class="price">
                                            <strong>₺@urun.UrunFiyatlar.First().Fiyat</strong>
                                        </div>
                                        <div class="button"><a href="@Href("~/Home/Details/" + (urun.ID))"><img src="~/Content/Img/buttons/english/button_goto_prod_details.gif" alt="Go To This Product's Detailed Information" title=" Go To This Product's Detailed Information " width="67" height="22"></a></div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        if ((urunler.IndexOf(urun) + 1) % 3 == 0)
                        {
